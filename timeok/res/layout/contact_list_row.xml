<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_weight="50"
    android:background="@drawable/grad"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="7dp"
    android:paddingTop="7dp" >

    <TextView
        android:id="@+id/contact_person_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:text="0"
        android:textSize="20sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/contact_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/contact_person_id"
        android:textSize="20sp" />

    <com.karmick.android.citizenalert.common.RoundedImageView
        android:id="@+id/contact_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/contact_select"
        android:src="@drawable/avatar" />

    <ImageButton
        android:id="@+id/get_location"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/contact_img"
        android:background="@android:color/transparent"
        android:src="@drawable/locate"
        android:visibility="visible" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:text="Rishikesh"
        android:textColor="#3460AC"
        android:textSize="20sp" />

</RelativeLayout>